{
    "manifest_version": 3,
    "name": "YourZenzone",
    "version": "1.0",
    "description": "Convert the hate speech to a random emoticon on website",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/icon16.png"
    }
  }
